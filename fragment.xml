<?xml version="1.0" encoding="UTF-8"?>
<fragment>
    <extension point="org.eclipse.ui.popupMenus">
      <viewerContribution
            targetID="org.eclipse.debug.ui.VariableView"
            id="org.eclipse.debug.ui.variablesView.popupMenu">
         <action
               class="atarih.variabledumper.ui.actions.VariableDumperAction"
               helpContextId="variable_dumper_action_context"
               id="org.eclipse.debug.ui.debugview.toolbar.variableDumper"
               label="Dump It!"
               menubarPath="variableGroup"
               tooltip="Dump It!">               
         </action>
      </viewerContribution>   
    </extension>
   <extension point="org.eclipse.ui.console.consolePageParticipants">
      <consolePageParticipant
            class="atarih.variabledumper.ui.console.VariableDumperConsolePageParticipant"
            id="atarih.variabledumper.ui.console.variableDumperConsoleParticipant">
         <enablement>
            <!-- 
                TODO - wondering what would happen if other plugins try to grab a MessageConsole too... 
                       maybe we should create a custom Console...
            -->
            <test property="org.eclipse.ui.console.consoleTypeTest" value="org.eclipse.ui.MessageConsole"/>
         </enablement>
      </consolePageParticipant>
   </extension>
</fragment>
 